---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
---

<Layout title="Anthony Chilan - Full Stack Developer">
  <!-- Responsive layout: columna en desktop, stacked en móvil -->
  <div class="md:grid md:grid-cols-[200px_1fr] min-h-screen flex flex-col">
    <!-- Sidebar/Header -->
    <aside>
        <Header />
      </aside>

    <!-- Main Content -->
    <main class="p-8 w-full max-w-[1600px] mx-auto">
      <main class="max-w-2xl mx-auto p-8">
        <header class="mb-12 text-center">
          <h1 class="text-4xl font-bold mb-2">Anthony Chilan</h1>
          <p class="text-lg text-gray-400">
            Full Stack Developer · CTO · Mobile & Web Specialist
          </p>
        </header>

        <section class="mb-12 text-center">
          <h2 class="text-2xl font-semibold mb-4">Contact Me</h2>
          <div class="text-gray-300">
            <p class="mb-2">
              Email:
              <a
                href="mailto:anthony.chilanp@gmail.com"
                class="text-blue-400 hover:underline"
                >anthony.chilanp@gmail.com</a
              >
            </p>
            <p>Location: Guayaquil, Ecuador</p>
          </div>
        </section>

        <footer class="text-center text-sm text-gray-500">
          <p>&copy; 2025 Anthony Chilan. All rights reserved.</p>
        </footer>
      </main>
    </main>
  </div>
</Layout>
