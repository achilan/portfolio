---
<!-- Botón del menú (visible solo en móvil) -->
<button id="menuToggle" class="md:hidden fixed top-4 left-4 z-50 text-white bg-black bg-opacity-50 p-2 rounded">
  ☰
</button>

<!-- Sidebar/Header -->
<header id="sidebar" class="fixed top-0 left-0 w-[200px] h-full p-8 text-white transform md:translate-x-0 -translate-x-full transition-transform duration-300 ease-in-out z-40 md:relative md:top-auto md:left-auto md:w-[200px] md:h-auto md:p-8 bg-black">
  <div class="mb-8">
    <a href="/">
      <img src="/iso.jpg" alt="Logo" class="w-12 h-12"
        style="border-radius: 50%; border: 2px solid white; box-shadow: 0 0 10px rgba(255, 255, 255, 0.5);">
      <h1 class="text-1xl font-bold mt-4">Acode</h1>
    </a>
  </div>
  <nav>
    <ul>
      <li class="mb-2"><a href="/" class="text-sm opacity-80 hover:opacity-100 transition-opacity">Home</a></li>
      <li class="mb-2"><a href="/blog" class="text-sm opacity-80 hover:opacity-100 transition-opacity">Blog</a></li>
      <li class="mb-2"><a href="/work" class="text-sm opacity-80 hover:opacity-100 transition-opacity">Work</a></li>
      <li class="mb-2"><a href="/about" class="text-sm opacity-80 hover:opacity-100 transition-opacity">About</a></li>
      <li class="mb-2"><a href="/contact" class="text-sm opacity-80 hover:opacity-100 transition-opacity">Contact</a></li>
    </ul>
  </nav>
</header>

<!-- Script para abrir/cerrar el sidebar móvil -->
<script>
  window.addEventListener('DOMContentLoaded', () => {
    const toggleBtn = document.getElementById("menuToggle");
    const sidebar = document.getElementById("sidebar");

    toggleBtn?.addEventListener("click", () => {
      sidebar.classList.toggle("-translate-x-full");
    });
  });
</script>
